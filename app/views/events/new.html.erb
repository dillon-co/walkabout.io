<div class="container marginTopXL">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
    <%= form_for @event, url: contact_path do |e| %>
      <fieldset>
        <div class="form-group">
          <%= e.text_field :name, placeholder: "Name", class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= e.email_field :email, placeholder: "Email", class: "form-control" %>
        </div>
        
        <div class="form-group">
          <% type_array = set_account.pages.all.map { |p| [p.name] } %>
          <%= e.select :type, options_for_select(type_array), include_blank: 'Type of Photoshoot', class: "form-control" %>
        </div>
        <div class="form-group">
          <%= e.text_field :date_one, placeholder: "Date #1", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= e.text_field :date_two, placeholder: "Date #2", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= e.text_field :date_three, placeholder: "Date #3", class: "form-control" %>
        </div>
      </fieldset>
      
      <fieldset>
        <div class="form-group">
          <%= e.submit "Send", class: "btn btn-primary" %>
        </div>
      </fieldset>
    <% end %>
    </div>
  </div>
</div>